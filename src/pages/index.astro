<style>
  .overskrift {
    justify-content: center;
    padding: 50px 0px;
    background-color: var(--color-secondary);
  }
  .om_lab {
    background-color: var(--color-background);
  }
  .om_lab1 {
    text-align: center;
    padding: 50px 20px;
    max-width: 600px;
    margin: auto;
  }
  .events {
    align-items: center;
    padding: 50px 20px;
    max-width: 1000px;
    margin: auto;
  }

  .listview {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(190px, 1fr));
    grid-auto-rows: min-content;
    gap: 20px;
    padding: 50px 0px;
    align-items: stretch;
    width: 100%;
  }

  .hero {
    background-color: var(--color-text);
    background-repeat: repeat-x;
    background-size: contain;
    background-position: center;
    background-image: url("../assets/herobg.png");

    .herotitel {
      display: flex;
      width: 100%;
      max-width: 1000px;
      place-self: center;
    }
  }

  .praktisk {
    background-color: var(--color-secondary);
    align-items: center;
    padding: 50px 20px;
    max-width: 1000px;
    margin: auto;
  }
  .praktisk_ydre {
    background-color: var(--color-secondary);
    justify-content: center;
  }

  .find_os {
    background-color: #fff;
    padding: 10px;
    gap: 14px;
    border-radius: 10px;
    margin: 50px 0;
    img {
      width: 100%;
      height: auto;
    }
  }
  .filtrering {
    display: flex;
    gap: 10px;
    justify-content: center;
    margin-top: 20px;
  }

  .filter-btn {
    padding: 8px 16px;
    border: 2px solid var(--color-primary);
    background-color: white;
    border-radius: 5px;
    cursor: pointer;
    font-weight: bold;
    transition: all 0.2s ease;
  }

  .filter-btn:hover {
    background-color: var(--color-secondary);
  }

  .filter-btn.active {
    background-color: var(--color-primary);
    color: white;
  }
  .hidden {
    display: none;
  }
  .tilbyder {
    max-width: 1000px;
    padding: 50px 20px;
    gap: 10px;
  }
  .tilbyder_ydre {
    background-color: var(--color-secondary);
    justify-content: center;
  }

  .some {
    justify-content: center;
    align-items: center;
  }
  .insta_icon {
    transition: all 0.3s ease-in-out;
  }
  .insta_icon:hover {
    scale: 1.05;
    transition: all 0.3s ease-in-out;
  }
  @media (min-width: 768px) {
    .praktisk {
      flex-direction: row;
      justify-content: center;
      gap: 20px;
      align-items: center;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const nyesteBtn = document.getElementById("nyeste-btn");
    const kommendeBtn = document.getElementById("kommende-btn");
    const nyesteView = document.getElementById("nyeste-view");
    const kommendeView = document.getElementById("kommende-view");

    if (nyesteBtn && kommendeBtn && nyesteView && kommendeView) {
      // Vis nyeste events
      nyesteBtn.addEventListener("click", () => {
        nyesteView.classList.remove("hidden");
        kommendeView.classList.add("hidden");
        nyesteBtn.classList.add("active");
        kommendeBtn.classList.remove("active");
      });

      // Vis kommende events
      kommendeBtn.addEventListener("click", () => {
        kommendeView.classList.remove("hidden");
        nyesteView.classList.add("hidden");
        kommendeBtn.classList.add("active");
        nyesteBtn.classList.remove("active");
      });
    }
  });
</script>
